<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="822.0" stylesheets="/chatWindow.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.p2p.controller.ChatWindowController">
    <children>
        <BorderPane prefHeight="500.0" prefWidth="822.0">
            <top>
                <AnchorPane prefHeight="53.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="chatOtherName" layoutX="388.0" layoutY="15.0" text="Label" />
                        <Button fx:id="exitChat" layoutX="14.0" layoutY="9.0" mnemonicParsing="false" onAction="#exitChatButtonAction" text="结束" />
                    </children>
                </AnchorPane>
            </top>
            <bottom>
                <VBox prefHeight="113.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                    <children>
                        <TextArea fx:id="messageInput" prefHeight="125.0" prefWidth="600.0" wrapText="true" />
                        <HBox prefHeight="84.0" prefWidth="600.0">
                            <children>
                                <Button fx:id="sendMessage" mnemonicParsing="false" onAction="#sendMessageButtonAction" text="发送" />
                                <Button fx:id="sendChatApplication" mnemonicParsing="false" onAction="#sendChatApplicationButtonAction" text="请求聊天" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </bottom>
            <center>
                <ScrollPane fx:id="chatMessageScrollPane" prefHeight="330.0" prefWidth="620.0" BorderPane.alignment="CENTER">
                    <content>
                        <VBox fx:id="chatMessage" prefHeight="330.0" prefWidth="620.0" />
                    </content>
                </ScrollPane>
            </center>
         <right>
            <TextArea fx:id="noticeMessage" prefHeight="200.0" prefWidth="200.0" wrapText="true" BorderPane.alignment="CENTER" />
         </right>
        </BorderPane>
    </children>
</AnchorPane>
